@model FlightTracker.Metier.Entities.Plane

@{
    ViewData["Title"] = "Supression d'avion";
}

<h2>Suppresion</h2>
<label>@ViewData["Message"]</label>
<h3>Êtes-vous sûr de vouloir supprimer ceci ?</h3>
<div>
    <h4>Avion</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    <form asp-action="DeletePlane">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-default" /> |
        <a asp-action="PlaneList">Retour à la liste</a>
    </form>
</div>