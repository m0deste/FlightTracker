@model FlightTracker.Metier.Entities.Flight
@{
    ViewData["Title"] = "Ajout d'un vol";
}

<h4>Vols</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFlight">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Origin" class="control-label">Provenance</label>
                <select asp-for="Origin"
                        asp-items="@(new SelectList(ViewBag.AirportList,"Id","Name"))" class="form-control">
                    <option>Choisir...</option>
                </select>
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label">Destination</label>
                <select asp-for="Destination"
                        asp-items="@(new SelectList(ViewBag.AirportList,"Id","Name"))" class="form-control">
                    <option>Choisir...</option>
                </select>
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plane" class="control-label">Avion</label>
                <select asp-for="Plane"
                        asp-items="@(new SelectList(ViewBag.PlaneList,"Id","Name"))" class="form-control">
                    <option>Choisir...</option>
                </select>
                <span asp-validation-for="Plane" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}